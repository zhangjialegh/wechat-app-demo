/* components/listview/listview.wxss */
@import "/assets/iconfont/icon.wxss";
.lists {
  height: 100%;
  padding-top: 40px;
}
.search-wrap {
  height: 40px;
  padding: 8rpx 10px;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
}
.search-wrap .search-box {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #f2f2f2;
  width: 100%;
  height: 100%;
}
.search-wrap .search-box input {
  font-size: 24rpx;
  padding: 2rpx 5rpx;
  width: 80%;
  height: 100%;
}
.search-wrap .search-box .icon-search {
  margin: 0 15rpx;
  font-size: 30rpx;
  color: #999;
}
.loading-box {
  width: 750rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.loading-box .loading-text {
  font-size: 24rpx;
  color: #666666;
}